#include <stdio.h>
int main(void) 
{
	int t,n,m,ts;
    //number of tests
	scanf("%d",&t);
	while (t--)
	{
	    scanf("%d %d",&n,&m);
	    if (n>m)
	    {
	        ts=n+(n-m);
	        printf("%d",ts);
	    }
	    else if (n==m)
	    {
	        ts=(2*n)-m;
	        printf("%d",ts);
	    }
	    else
	    printf("%d",n);
	}
	return 0;   
}
